@using FritoLay.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "FritoLay Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="well login-form">
    <div class="row form-header">
        <h2>Log in with your User Account</h2>
    </div>
    
    @using (Html.BeginForm())
    {
        <div class="row"><h3>@Html.LabelFor(m => m.Email)<span class="star">*</span></h3></div>
        <div class="row"><h3 class="text-box">@Html.TextBoxFor(m => m.Email)</h3></div>

        <div class="row"><h3>@Html.LabelFor(m => m.Password)<span class="star">*</span></h3></div>
        <div class="row"><h3 class="text-box">@Html.PasswordFor(m => m.Password)</h3></div>

        <div class="row"><input type="submit" value="Login" class="btn btn-default form-button" /></div>
    }
</div>

